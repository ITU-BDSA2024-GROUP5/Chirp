@page "{username}"
@model Chirp.Web.Pages.About.PersonalDataVaultModel
@{
    ViewData["Title"] = "Personal Data Vault";
}

<h2>@ViewData["Title"]</h2>
<p>Welcome, @Model.Username!</p>
<p>this page shows all the good personal information we have on you.</p>

<table class="table">
    <thead>
        <tr>
            <th>Detail</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PersonalDataItems)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>

<form method="post">
    <button type="submit" asp-page-handler="ShowCheeps">Show Cheeps</button>
</form>
<button id="backButton">Go Back</button>

@section Scripts {
    <script>
        document.getElementById("backButton").addEventListener("click", function() {
            window.history.back();
        });
    </script>
}
